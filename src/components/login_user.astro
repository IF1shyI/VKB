<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Logga in</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.0.2/tailwind.min.css"
    />
    <script src="https://accounts.google.com/gsi/client" async defer></script>
  </head>
  <body>
    <form action="">
      <h1>Logga in</h1>
      <div class="form-group">
        <label for="email">Mail</label>
        <input
          type="email"
          id="email"
          spellcheck="false"
          required
          placeholder="Mail"
          autocomplete="off"
        />
        <label for="password">Lösenord</label>
        <input
          type="password"
          id="password"
          required
          placeholder="Lösenord"
          autocomplete="off"
        />
        <button type="submit" class="submitbtn">Login</button>
      </div>
    </form>

    <div id="google-login" class="mt-4"></div>

    <script>
      // Din Google Client ID
      const CLIENT_ID = "DIN_GOOGLE_CLIENT_ID";

      // Ladda Google Identity Services
      window.onload = () => {
        google.accounts.id.initialize({
          client_id: CLIENT_ID,
          callback: handleCredentialResponse,
        });

        google.accounts.id.renderButton(
          document.getElementById("google-login"),
          {
            theme: "outline",
            size: "large",
          } // Anpassningsalternativ för knappen
        );
      };

      // Hantera svaret från Google
      async function sendTokenToBackend(token) {
        const response = await fetch("http://localhost:3000/verify-token", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ token }),
        });

        const result = await response.json();
        console.log(result);
      }
    </script>
  </body>
</html>

