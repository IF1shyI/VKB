---
// import "../css/style.css"; // Importera din CSS-fil i Astro-komponenten
---

<header>
  <a href="/"><img src="/bilder/logga.svg" alt="logga.svg" class="logga" /></a>
  <a href="/"><h1 class="namn">VAD KOSTAR BILEN</h1></a>
  <div id="login-container">
    <button class="login" onclick="window.location.href='/login'">
      <img src="/bilder/login_icon.svg" alt="" class="login_img" />
      <div class="login_button_text">Logga in</div>
    </button>
  </div>
  <div class="menu-icon" onclick="toggleMenu()">
    <img src="/bilder/meny_icon.svg" alt="meny.svg" />
  </div>
  <nav class="menu">
    <button class="nav-button" onclick="window.location.href='/'">Hem</button>
    <button class="nav-button" onclick="window.location.href='/info'"
      >Tips</button
    >
    <button class="nav-button" onclick="window.location.href='/kontakt'"
      >Kontakt</button
    >
    <button class="nav-button" onclick="window.location.href='/about'"
      >Om oss</button
    >
  </nav>
</header>
<script is:inline>
  function toggleMenu() {
    var nav_buttons = document.getElementsByClassName("nav-button");
    var menu = document.querySelector(".menu");
    menu.classList.toggle("show");
    if (nav_buttons) {
      nav_buttons.classList.toggle("hidden");
    } else {
      console.error("Menu element not found!");
    }
  }

  document.addEventListener("DOMContentLoaded", async () => {
    const loginContainer = document.getElementById("login-container");

    // Kontrollera om JWT finns i localStorage
    const jwtToken = localStorage.getItem("jwt");

    if (jwtToken) {
      try {
        // Skicka en begäran till backend för att verifiera JWT och få användarinfo
        const response = await fetch("http://127.0.0.1:5000/checksession", {
          method: "GET",
          headers: {
            Authorization: `Bearer ${jwtToken}`, // Skicka token i Authorization-headern
          },
        });

        if (response.ok) {
          const data = await response.json();

          // Om token är giltig och användarnamn finns, uppdatera knappen
          if (data.username) {
            loginContainer.innerHTML = `
              <button class="login logged-in" onclick="window.location.href='/profile'">
                <img src="/bilder/login_icon.svg" alt="" class="login_img" />
                <div class="login_button_text">${data.username}</div>
              </button>
            `;
          }
        } else {
          // Om token inte är giltig, ta bort den
          localStorage.removeItem("jwt");
        }
      } catch (error) {
        console.error("Fel vid validering av session:", error);
        localStorage.removeItem("jwt");
      }
    }
  });
</script>

<style>
  :root {
    --login_button_width: 130px;
  }
  .hidden {
    display: none;
  }
  header {
    width: 100%;
    height: var(--header-sz);
    /* background-color: var(--svart); */
    background-color: transparent;
    display: flex;
    position: relative; /* Lägger till relativ position för att hantera absolut positionering av knappen */

    font-family: var(--font);
    h1 {
      position: absolute;

      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      margin: 0;
      color: var(--vit);
    }

    .logga {
      position: absolute;

      top: 50%;
      left: 5%;
      transform: translate(-50%, -50%);
      margin: 0;
      width: 4rem;
    }
  }

  .menu-icon {
    display: block;
    font-size: 30px;
    cursor: pointer;
    color: white;
    margin-right: var(--margin-s);
    position: absolute;
    top: 50%;
    right: 20px;
    transform: translateY(-50%);
  }

  .menu {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    position: absolute;
    top: 100%; /* Placera menyn under headern */
    right: 0; /* Justera för att placera menyn till höger */
    top: 50%;
    transform: translateY(-50%);
    z-index: 10; /* Säkerställ att menyn visas ovanpå andra element */

    justify-content: center;
  }

  .menu button {
    color: var(--guld);
    text-decoration: none;
    margin-right: var(--margin-s);
    font-size: 1.25rem;
    font-weight: bold;

    width: 150px;
    height: var(--header-btn-sz);
    background-color: var(--orange);
    border-radius: 1rem;

    text-align: center;
  }

  .menu button:hover {
    background-color: var(--gra);
  }

  .menu {
    opacity: 0;
    max-height: 0;

    overflow: hidden;

    width: 100%;

    text-align: center;

    transition:
      opacity 0.5s ease,
      max-height 0.5s ease;
  }

  .menu a {
    padding: 15px;
  }

  .menu.show {
    display: flex;
    align-items: center;

    left: 50%;
    top: var(--header-sz);
    transform: translateX(-50%);

    background-color: var(--svart);
    padding-bottom: var(--margin-s);
    padding-top: 5px;

    opacity: 1;
    max-height: 500px;
  }

  .login {
    position: absolute;
    top: 0;
    left: 0;

    width: var(--login_button_width);
    height: var(--header-btn-sz);

    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    .login_img {
      position: absolute;
      top: 50%;
      left: 15%;
      transform: translate(-50%, -50%);

      height: 60%;
      aspect-ratio: 1;
    }

    .login_button_text {
      position: absolute;
      right: 15px;
      font-size: 1rem;
      width: fit-content;
    }
  }
  #login-container {
    position: absolute;
    top: 50%;
    right: 80px;
    transform: translateY(-50%);

    width: var(--login_button_width);
    height: var(--header-btn-sz);
  }

  .logged-in {
    width: 400px;
  }

  @media screen and (max-width: 800px) {
    :root {
      --login_button_width: 30px;
      --header-btn-sz: var(--login_button_width);
    }
    .namn {
      font-size: 1.25rem;
      position: absolute;
      text-align: center;

      left: 10px;
      transform: translateY(-50%);
      margin: 0;
      /* width: 60%; */
    }

    .logga {
      display: none;
    }

    .login {
      border-radius: 4px;
      margin: 0;

      .login_img {
      position: absolute;
      left: 50%; !important
      top: 50%;
      }
    }

    .login_button_text {
      display: none;
    }
  }
</style>
