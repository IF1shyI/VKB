---
import Layout from "../../layouts/Layout.astro"; // Din layoutfil om du har en

// Få parametern från URL:en
const { title } = Astro.params;

// Hitta produkten baserat på titeln
const product = products.find((p) => p.Title === decodeURIComponent(title));

if (!product) {
  throw new Error(`Produkten med titeln "${title}" hittades inte.`);
}
---

<Layout>
  <main>
    <h1>{product.Title}</h1>
    <img
      src={product.Img}
      alt={product.Title}
      style="max-width: 100%; height: auto;"
    />
    <p><strong>Pris:</strong> {product.Price} :-</p>
    <p><strong>Typ:</strong> {product.Type}</p>
    <a href={product.Link} target="_blank" rel="noopener noreferrer">
      <button
        style="padding: 10px 20px; background: black; color: white; border-radius: 5px;"
      >
        Köp nu
      </button>
    </a>
  </main>
</Layout>
