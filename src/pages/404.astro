---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Sida hittades inte">
  <div class="container">
    <h1>Oops!</h1>
    <p>Vi kunde inte hitta sidan du söker.</p>
    <a href="/" class="home-link">Gå tillbaka till startsidan</a>
  </div>
</Layout>

<style>
  body {
    text-align: center;
    margin: 0;
    padding: 0;
  }
  .container {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  h1 {
    font-size: 5rem;
    margin: 0;
    color: var(--vit);
  }
  p {
    font-size: 1.5rem;
    color: var(--vit);
  }
  .home-link {
    margin-top: 20px;
    text-decoration: none;
    font-size: 1.2rem;
    color: #007bff;
  }
  .home-link:hover {
    text-decoration: underline;
  }
</style>
